<div class="container">
  <div class="row">

  <h1><%= @task.title %></h1>
  <h4><%= @task.details %></h4>
  <h6>Completed: <%= @task.completed %></h6>

  <%= link_to "Update task", edit_task_path(@task) %>
  <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  <%= link_to "Back to list", tasks_path %>

  </div>
</div>
